<UserControl x:Class="EasySave_Graphique.View.ModifyView.Modify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave_Graphique.View.ModifyView"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- list tab 1 -->
        
        <TextBlock
            Style="{StaticResource MaterialDesignHeadline2TextBlock}"
            Text="Modify"
            FontWeight="SemiBold"
            VerticalAlignment="Center"
        />
        
        <ListView Grid.Row="2" Grid.RowSpan="2"
                  ItemsSource="{Binding Items1}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Save}"
                        Header="Save Number" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Name}"
                        Header="Name" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Source}"
                        Header="Source Path" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Target}"
                        Header="Target Path" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Number}"
                        Header="Files Number" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Size}"
                        Header="Size" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
